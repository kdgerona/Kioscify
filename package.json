{
  "name": "kioskly",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "kioskly-api",
    "kioskly-admin"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "api:dev": "npm run start:dev --workspace=kioskly-api",
    "app:dev": "cd kioskly-app && npm start",
    "app:android": "cd kioskly-app && npm run android",
    "admin:dev": "npm run dev --workspace=kioskly-admin",
    "api:build": "npm run build --workspace=kioskly-api",
    "app:build": "cd kioskly-app && npm run build",
    "admin:build": "npm run build --workspace=kioskly-admin"
  },
  "devDependencies": {
    "turbo": "2.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
